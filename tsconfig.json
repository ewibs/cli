{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es2017",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "declaration": true,
    "allowJs": true,
    "strict": true,
    "baseUrl": ".",
    "outDir": "./lib"
  },
  "exclude": [
    "test.ts"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
